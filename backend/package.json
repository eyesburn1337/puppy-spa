{
  "name": "puppy-spa-backend",
  "version": "1.0.0",
  "scripts": {
    "build": "npx @nestjs/cli build",
    "start": "npx @nestjs/cli start",
    "start:dev": "npx @nestjs/cli start --watch",
    "start:debug": "npx @nestjs/cli start --debug --watch",
    "db:init": "ts-node src/database/init.ts",
    "migration:create": "mikro-orm migration:create",
    "migration:up": "mikro-orm migration:up",
    "migration:down": "mikro-orm migration:down",
    "db:drop": "mikro-orm schema:drop --run",
    "db:create": "mikro-orm schema:create --run",
    "db:update": "mikro-orm schema:update --run",
    "db:seed": "mikro-orm seeder:run",
    "db:reset": "npm run db:drop && npm run db:create && npm run migration:up",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "start:prod": "node dist/main",
    "prestart:prod": "npm run migration:up"
  },
  "dependencies": {
    "@mikro-orm/core": "^5.9.7",
    "@mikro-orm/knex": "^5.9.7",
    "@mikro-orm/migrations": "^5.9.7",
    "@mikro-orm/nestjs": "^5.2.2",
    "@mikro-orm/postgresql": "^5.9.7",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.1",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/testing": "^10.4.15"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^5.9.7",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.14",
    "@types/node": "^18.19.76",
    "@types/uuid": "^9.0.8",
    "jest": "^29.7.0",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.2.6",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^4.9.5"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts"
    ]
  }
}
